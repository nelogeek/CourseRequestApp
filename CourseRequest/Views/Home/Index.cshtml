@{
    ViewData["Title"] = "Заявка на курс";
}

@using System.Security.Principal
@{
    WindowsIdentity currentIdentity = WindowsIdentity.GetCurrent();
    string userName = currentIdentity?.Name ?? "Неизвестно";
}


<div class="container-fluid">
    <div class="row mt-3">
        <div class="col">
            <div>
                <b>Новая заявка</b>
            </div>
            <div>
                <span class="user">Пользователь: @userName</span>
            </div>
        </div>
        <div class="col-auto text-center">
            <a class="btn btn-primary" asp-area="" asp-controller="Request" asp-action="RequestList">Перейти к списку</a>
        </div>
    </div>

    <hr />

    <div class="row mb-4 mt-2">
        <div class="col-md-4">
            <label for="inputField">ФИО</label>
            <input type="text" class="form-control" id="inputField" placeholder="Введите значение">
        </div>
        <div class="col-md-4">
            <label for="inputField">Наименование курса</label>
            <textarea class="form-control" id="textareaField" rows="1" placeholder="Введите текст"></textarea>
        </div>
        <div class="col-md-4">
            <label for="inputField">Статус</label>
            <select class="form-control" id="selectField">
                <option value="1">Заявлен на обучение</option>
                <option value="2">Курс пройден</option>
            </select>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-4">
            <label for="inputField">Отдел</label>
            <input type="text" class="form-control" id="inputField" placeholder="Введите значение">
        </div>
        <div class="col-md-4">
            <label for="selectField">Тип курса</label>
            <select class="form-control" id="selectField">
                <option value="1">Базовый</option>
                <option value="2">Продвинутый</option>
                <option value="3">Для администраторов</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="eventDate">Период проведения курса</label>
            <div class="row">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="startDate" placeholder="от" />
                </div>
                <div class="col-md-6">
                    <input type="text" class="form-control" id="endDate" placeholder="до">
                </div>
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-4">
            <label for="inputField">Должность</label>
            <input type="text" class="form-control" id="inputField" placeholder="Введите значение">
        </div>
        <div class="col-md-4">
            <label for="inputField">Примечание</label>
            <textarea class="form-control" id="textareaField" rows="1" placeholder="Введите текст"></textarea>
        </div>
        <div class="col-md-4">
            <label for="inputField">Год</label>
            <input type="text" class="form-control" id="curYear" placeholder="Введите значение">
        </div>
    </div>
    <div class="row">
        <div class="col-auto">
            <span class="countApp">Количество заявок: </span>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <a class="btn btn-primary btn-custom-outline-orange text-white">Создать заявку</a>
        </div>
    </div>
</div>







